# 此配置文件用来统一不同编辑器风格
# 编辑器需要安装editorconfig插件，如atom,webstorm

# http://editorconfig.org
root = true

[*]
charset = utf-8
#换行方式
end_of_line = lf
#缩进方法 空格space/表格tab
indent_style = space
#缩进 4个空格
indent_size = 4
insert_final_newline = true
max_line_length = 150
#将行尾空格自动删除
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
